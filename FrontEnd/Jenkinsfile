pipeline {
    agent any
    tools {
        nodejs 'nodejs_20_12_2' // Configura la versi√≥n de Node.js instalada en Jenkins
    }
    stages {
        stage('Checkout Code') {
            steps {
                checkout scm
            }
        }

        stage('Install Dependencies') {
            steps {
                dir('FrontEnd') {
                    bat 'npm install'
                }
            }
        }

        stage('Build Project') {
            steps {
                dir('FrontEnd') {
                    bat 'npm run build'
                }
            }
        }

        stage('Build Docker Image') {
            steps {
                dir('FrontEnd') {
                    bat 'docker build -t haruhisomu/frontend:latest .'
                }
            }
        }

        stage('Push Image to Docker Hub') {
            steps {
                withCredentials([string(credentialsId: 'dockerPass', variable: 'DOCKER_HUB_PASSWORD')]) {
                    bat 'docker login -u haruhisomu -p %DOCKER_HUB_PASSWORD%'
                }
                bat 'docker push haruhisomu/frontend:latest'
            }
        }
    }
}
